{
  "private": true,
  "name": "vaya-pin",
  "displayName": "Vaya pin",
  "version": "0.0.0",
  "description": "An address for Anyone & Anything, Anywhere.",
  "author": "VayaPin",
  "type": "module",
  "scripts": {
    "dev": "plasmo dev",
    "dev:firefox": "plasmo dev --target=firefox-mv3",
    "build": "plasmo build && plasmo build --target=firefox-mv3",
    "package": "plasmo package && plasmo package --target=firefox-mv3",
    "typecheck": "tsc --noEmit",
    "prettier": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "stylelint": "stylelint 'src/*.css'",
    "prepare": "husky",
    "pack:safari": "xcodebuild -project 'safari/test project.xcodeproj' -scheme 'test project' -destination 'platform=macOS'",
    "prepare:safari": "bash scripts/prepare-safari-release.sh"
  },
  "dependencies": {
    "@apollo/client": "^3.13.1",
    "@plasmohq/storage": "^1.15.0",
    "clsx": "^2.1.1",
    "graphql": "^16.10.0",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.4",
    "plasmo": "0.90.3",
    "radix-ui": "^1.1.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-i18next": "^15.4.1",
    "react-use": "^17.6.0",
    "tailwind-merge": "^3.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.21.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.3",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "stylelint-prettier": "^5.0.3",
    "tailwindcss": "^3.4.17",
    "typescript": "5.7.3",
    "typescript-eslint": "^8.24.1"
  },
  "manifest": {
    "name": "__MSG_extensionName__",
    "description": "__MSG_extensionDescription__",
    "default_locale": "en",
    "browser_specific_settings": {
      "gecko": {
        "id": "{$PLASMO_PUBLIC_WEB_EXT_GECKO_ID}",
        "strict_min_version": "126.0"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [
          "assets/svg/*.svg"
        ],
        "matches": [
          "https://*/*"
        ]
      }
    ],
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "identity"
    ],
    "oauth2": {
      "client_id": "$PLASMO_PUBLIC_CLIENT_ID",
      "scopes": [
        "vayapin_webapp"
      ]
    }
  },
  "webExt": {
    "sourceDir": "./build/firefox-mv3-prod"
  },
  "packageManager": "pnpm@9.15.1+sha512.1acb565e6193efbebda772702950469150cf12bcc764262e7587e71d19dc98a423dff9536e57ea44c49bdf790ff694e83c27be5faa23d67e0c033b583be4bfcf"
}
